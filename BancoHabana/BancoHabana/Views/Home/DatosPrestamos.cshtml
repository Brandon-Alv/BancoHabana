@{ Layout = null;

    BancoHabana.Models.Prestamos prestamos = new BancoHabana.Models.Prestamos();

    prestamos = (BancoHabana.Models.Prestamos)Session["prestamos"];



    }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="~/Scripts/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.mobile-1.4.5.js"></script>
    <link rel="stylesheet" href="~/Content/jquery.mobile-1.4.5.css">
    <link rel="stylesheet" href="~/Content/jquery.mobile.theme-1.4.5.css">
    <link rel="stylesheet" href="~/Content/temafsc_3.css">
    <link rel="stylesheet" href="~/Content/jquery.mobile.external-png-1.4.5.css">
    <link rel="stylesheet" href="~/Content/jquery.mobile.icons-1.4.5.css">
    <link rel="stylesheet" href="~/Content/jquery.mobile.inline-png-1.4.5.css">
    <link rel="stylesheet" href="~/Content/jquery.mobile.structure-1.4.5.css">
    <style>
        .foto {
            margin-left: 20%;
        }

        h3 {
            text-align: center;
            align-content: center;
        }
    </style>
    <title>DatosPrestamos</title>
</head>
<body>
    <div id="DatosPrestamos" data-role="page">
        <div data-role="header" data-position="fixed" data-theme="c">
            <h3>Prestamos</h3>
        </div>
        <div data-role="content">
            <div>
                <label>Número Cuenta</label>
                <input type="text" id="txtNumCuenta" value="@prestamos.Numcuenta" name="txtNumCuenta" readonly="readonly">
                <label>Deuda</label>
                <input type="text" id="txtDeuda" name="txtDeuda" value="@prestamos.saldo" readonly="readonly">
                <label>Información</label>
                <textarea name="txtInfo" rows="10" cols="40" readonly="readonly">@prestamos.informacion</textarea>
                <label>Cuotas</label>
                <input type="text" name="txtCuota" id="idCuota" value="@prestamos.cuota" readonly="readonly">
                <label>Fecha Pago</label>
                <input type="text" name="txtFecha" id="txtFecha" value="@prestamos.fechapago" readonly="readonly">
                <label>Opción Pago</label>
                <input type="text" name="txtOpcionPrestamo" value="@prestamos.opcionpago" id="txtOpcionPrestamo" readonly="readonly">
            </div>
            <br>
            <a href="MenuProductos" data-role="button">Regresar</a>
        </div>
    </div>
</body>
</html>
